<?xml version="1.0"?>
<PropertyList>

	<path>A-10-ai.ac</path>

	<animation>
		<type>select</type>
		<object-name>off-flag</object-name>
		<condition>
			<less-than>
				<property>systems/electrical/outputs/adi</property>
				<value>24</value>
			</less-than>
		</condition>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>sphere</object-name>
		<property>instrumentation/attitude-indicator/internal-roll-deg</property>
		<center>
			<x-m>0</x-m>
			<y-m>0.0</y-m>
			<z-m>0.0</z-m>
		</center>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>sphere</object-name>
		<property>instrumentation/attitude-indicator/internal-pitch-deg</property>
		<center>
			<x-m>-0.0522</x-m>
			<y-m>0.0</y-m>
			<z-m>0.0023</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>

	<!-- ILS mode -->
	<animation>
		<type>select</type>
		<object-name>ils-flag</object-name>
		<condition>
			<or>
				
				<less-than>
					<property>systems/electrical/outputs/adi</property>
					<value>24</value>
				</less-than>
				<equals>
					<property>instrumentation/nav[0]/in-range</property>
					<value>false</value>
				</equals>
			</or>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>glide-slope-index</object-name>
		<condition>
			<equals>
				<property>instrumentation/nav[0]/has-gs</property>
				<value>true</value>
			</equals>
			<greater-than>
				<property>systems/electrical/outputs/adi</property>
				<value>24</value>
			</greater-than>
		</condition>
	</animation>

	<animation>
		<type>translate</type>
		<object-name>glide-slope-index</object-name>
		<condition>
			<equals>
				<property>instrumentation/nav[0]/gs-in-range</property>
				<value>true</value>
			</equals>
			<greater-than>
				<property>systems/electrical/outputs/adi</property>
				<value>24</value>
			</greater-than>
		</condition>
		<property>instrumentation/nav[0]/gs-needle-deflection</property>
		<interpolation>
			<entry>
				<ind>-2.5</ind>
				<dep>-0.036</dep>
			</entry>
			<entry>
				<ind>0</ind>
				<dep>0</dep>
			</entry>
			<entry>
				<ind>2.5</ind>
				<dep>0.036</dep>
			</entry>
		</interpolation>
		<axis>
			<x>-0.087</x>
			<y>0</y>
			<z>1</z>
		</axis>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>bank-index</object-name>
		<property>instrumentation/attitude-indicator/internal-roll-deg</property>
		<min-deg>-120</min-deg>
		<max-deg>120</max-deg>
		<center>
			<x-m>-0.0015</x-m>
			<y-m>0</y-m>
			<z-m>0.0064</z-m>
		</center>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

<!-- ADI's bars -->

	<animation>
		<type>select</type>
		<object-name>yaw-steering-bar</object-name>
		<condition>
            <property>instrumentation/afds/inputs/FD</property>
		</condition>
	</animation>

	<animation>
		<type>translate</type>
		<object-name>yaw-steering-bar</object-name>
        <property>autopilot/internal/target-roll-deg</property>
        <factor>0.001</factor>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
	</animation>

	<animation>
		<type>translate</type>
		<object-name>yaw-steering-bar</object-name>
        <property>orientation/roll-deg</property>
        <factor>0.001</factor>
        <axis>
            <x>0</x>
            <y>-1</y>
            <z>0</z>
        </axis>
	</animation>

	<animation>
		<type>select</type>
		<object-name>pitch-steering-bar</object-name>
		<condition>
            <property>instrumentation/afds/inputs/FD</property>
		</condition>
	</animation>

	<animation>
		<type>translate</type>
		<object-name>pitch-steering-bar</object-name>
        <property>autopilot/internal/target-pitch-deg</property>
        <factor>0.00168</factor>
        <axis>
            <x>0</x>
            <y>0</y>
            <z>1</z>
        </axis>
	</animation>

	<animation>
		<type>translate</type>
		<object-name>pitch-steering-bar</object-name>
		<property>instrumentation/attitude-indicator/internal-pitch-deg</property>
        <factor>0.00168</factor>
        <axis>
            <x>0</x>
            <y>0</y>
            <z>-1</z>
        </axis>
	</animation>

