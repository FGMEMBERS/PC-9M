	<!-- course-flag -->
	<animation>
		<type>select</type>
		<object-name>course-flag</object-name>
		<condition>
			
					<not>
						<property>instrumentation/nav[0]/in-range</property>
					</not>
					
		</condition>
	</animation>

	<!-- slip-ball-->
	<animation>
		<type>rotate</type>
		<object-name>slip-ball</object-name>
		<property>instrumentation/slip-skid-ball/indicated-slip-skid</property>
		<factor>8</factor>
		<min-deg>-11</min-deg>
		<max-deg>11</max-deg>
		<center>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0.0279031</z-m> 
		</center>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

	<!-- lighting -->

	<animation>
		<object-name>mount</object-name>
		<type>material</type>
		<emission>
			<factor-prop>controls/lighting/panel-norm</factor-prop>
			<red>0.45</red>
			<green>0.34</green>
			<blue>0.18</blue>
		</emission>
	</animation>

	<animation>
	<type>material</type>
		<object-name>ils-flag</object-name>
		<object-name>off-flag</object-name>
		<object-name>course-flag</object-name>
		<object-name>ring-slip</object-name>
		<object-name>bank-index</object-name>
		<object-name>ai-ring</object-name>
		<object-name>gs-scale</object-name>
		<object-name>knob-index</object-name>

		<emission>
			<factor-prop>systems/electrical/outputs/instrument-lights</factor-prop>
			<red>0.045</red>
			<green>0.025</green>
			<blue>0.015</blue>
		</emission>
	</animation>

	<animation>
		
		<type>material</type>
		<object-name>sphere</object-name>
		<object-name>reticl</object-name>
		<object-name>slip-ball</object-name>
		<object-name>glide-slope-index</object-name>
		<object-name>bank-index</object-name>
		<emission> 
			<factor-prop>systems/electrical/outputs/instrument-lights</factor-prop>
			<red>0.045</red>
			<green>0.025</green>
			<blue>0.015</blue>
		</emission>
	</animation>

	<animation>
		
		<type>material</type>
		<object-name>yaw-steering-bar</object-name>
		<object-name>pitch-steering-bar</object-name>
		<emission>
			<red>0.9</red>
			<green>0.7</green>
			<blue>0.0</blue>
		</emission>
	</animation>

	<animation>
		<type>range</type>
		<min-m>0</min-m>
		<max-m>5</max-m>
	</animation>

</PropertyList>
