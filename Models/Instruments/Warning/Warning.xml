<?xml version="1.0"?>

<!-- by Petar jedvaj -->

<PropertyList>

<path>Warning.ac</path>

<animation> 
<type>select</type>
<object-name>master-warning</object-name>
<condition>
<equals>
<property>sim/alarms/stall-warning</property>
<value>1</value>
</equals>
</condition>
</animation>

<animation> 
<type>material</type>
<object-name>master-warning</object-name>
<emission> 
<red>1</red>
<green>0</green>
<blue>0</blue>
</emission>
</animation>

<animation> 
<type>select</type>
<object-name>master-caution</object-name>
<condition>
<and>
<less-than>
<property>consumables/fuel/tank[0]/level-gal_us</property>
<value>80</value>
</less-than>
<less-than>
<property>consumables/fuel/tank[1]/level-gal_us</property>
<value>80</value>
</less-than>
</and>
</condition>
</animation>

<animation> 
<type>material</type>
<object-name>master-caution</object-name>
<emission> 
<red>255</red>
<green>255</green>
<blue>0</blue>
</emission>
</animation>

<animation> 
<type>select</type>
<object-name>fire</object-name>
<condition>
<equals>
<property>sim/crashed</property>
<value>1</value>
</equals>
</condition>
</animation>

<animation> 
<type>material</type>
<object-name>fire</object-name>
<emission> 
<red>1</red>
<green>0</green>
<blue>0</blue>
</emission>
</animation>

<animation>
<type>range</type>
<min-m>0</min-m>
<max-m>5</max-m>
</animation>

</PropertyList>

