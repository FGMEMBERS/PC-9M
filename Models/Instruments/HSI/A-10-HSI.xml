  </animation>
  <animation>
    <type>textranslate</type>
    <object-name>course-drum-2</object-name>
 
   <property>instrumentation/nav/radials/selected-deg</property>  
    
    <factor>0.01</factor>
    <offset>-10</offset>
    <step>10</step>
    <scroll>0.5</scroll>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>-1</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <type>textranslate</type>
    <object-name>course-drum-3</object-name>
  
     <property>instrumentation/nav/radials/selected-deg</property>
    
    <factor>0.001</factor>
    <offset>-100</offset>
    <step>100</step>
    <scroll>0.5</scroll>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>-1</y>
      <z>0</z>
    </axis>
  </animation>
  

<!--		COURSE KNOB          -->

<animation>
	<type>pick</type>
	<object-name>course-knob</object-name>
	<action>
		<button>3</button> <!--  scroll up -->
		<repeatable>false</repeatable>
		<binding>
			<command>property-adjust</command>
			<property>instrumentation/nav/radials/selected-deg</property>
			<step>1</step>
			<min>1</min>
			<max>361</max>
			<wrap>true</wrap>
		</binding>
	</action>
</animation>

<animation>
	<type>pick</type>
	<object-name>course-knob</object-name>
	<action>
		<button>4</button> <!--  scroll down -->
		<repeatable>false</repeatable>
		<binding>
