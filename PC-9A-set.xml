<PropertyList include="PC9-shared.xml">

  <sim>
    <variant-of>PC-9M</variant-of>

    <!--Info -->

    <description>Pilatus PC-9A</description>
    <long-description>
     The Pilatus PC-9A is a single-engine, low-wing tandem-seat turboprop training aircraft manufactured by Pilatus Aircraft of Switzerland. Designed as a more powerful evolution of the Pilatus PC-7.
    </long-description>
    <rating>
      <FDM type="int">4</FDM>
      <systems type="int">3</systems>
      <cockpit type="int">3</cockpit>
      <model type="int">5</model>
    </rating>
    <tags>
      <tag>ga</tag>
      <tag>pilatus</tag>
      <tag>low-wing</tag>
      <tag>tricycle</tag>
      <tag>retractable-gear</tag>
      <tag>single-engine</tag>
      <tag>turboprop</tag>
      <tag>variable-pitch</tag>
      <tag>trainer</tag>
      <tag>ifr</tag>
      <tag>1980s</tag>
      <tag>1990s</tag>
      <tag>2000s</tag>
      <tag>2010s</tag>
    </tags>

    <model>
      <!--
       The model is dynamically loaded by setting /model/pc9m/pc-9a to true
       -->
      <pc9m>
       <pc-9a type="bool">true</pc-9a>
      </pc9m>
    </model>

    <menubar>
      <default>
        <menu n="100">
          <label>PC-9A</label>
        </menu>
      </default>
    </menubar>

    <help>
      <title>Pilatus PC-9A</title>
    </help>
  </sim>

  <controls>
    <engines>
      <active-engine type="int">0</active-engine>
    </engines>
  </controls> 

</PropertyList>
